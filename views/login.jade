extends layout

block content
  h1 Login
  p Please login below
  form(method="post", action="users/register", enctype="multipart/form-data")
    .form-group
      label Username
      input.form-control(name="username", type="text", placeholder="Enter Name")
    .form-group
      label Password
      input.form-control(name="password", type="password", placeholder="Enter Password")
    input.btn.btn-success(name="submit", type="submit", value="Login")
